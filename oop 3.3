#include<iostream>
using namespace std;

float vol(int,int);
float vol(float);
int vol(int);

    
int main()
{
    int r,h,a;
    float r1,r2;
    cout<<"Enter radius and height of a cylinder:"<<endl;
    cin>>r>>h;
    cout<<"Volume of cylinder is "<<vol(r,h)<<endl;
        
    cout<<"Enter side of cube:"<<endl;
    cin>>a;
    cout<<"Volume of cube is "<<vol(a)<<endl;
        
    cout<<"Enter radius of sphere: "<<endl;
    cin>>r1;
    cout<<"Volume of sphere is "<<vol(r1)<<endl;
        
    cout<<"Enter radius and height of a cone"<<endl;
    cin>>r2>>h;
    cout<<"Volume of cone is: "<<vol(r2,h)<<endl;
        
    float v=vol(r,h)+vol(a)+vol(r1)+vol(r2,h);
    cout<<" The sum of all the volumes is: "<<v<<endl;
    return 0;
}    
//use of inline function in each function 
inline float vol(int r,int h)
{
    return(3.14*r*r*h);
}

inline float vol(float r1)
{
    return((4*3.14*r1*r1*r1)/3);
}

inline int vol(int a)
{
    return(a*a*a);
}

inline float vol(float r2,int h)
{
    return(3.14*r2*r2*h);
}
