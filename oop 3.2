#include <iostream>
using namespace std;

void marks(float *average=new float)        //function for entering marks
{
int studentmarks[5], sum;                             //array of 5 students
cout<< "Enter the marks of 5 students: " <<endl;
    for (int i = 0; i < 5; ++i) {                      //for loop for entering marks of 5 students
       cout << "Enter the marks:";
       cin >> studentmarks[i];
    }
sum=studentmarks[0]+studentmarks[1]+studentmarks[2]+studentmarks[3]+studentmarks[4]; //sum of marks of 5 students for calculating the average
*average=sum/5;     //Average marks of 5 students
}

int main()
{
float average;
marks(&average);
cout<<"Average marks: "<<average<< endl;

return 0;
}
